@model List<LedgerViewModel>
<div class="row mt-4">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ledger in Model)
                {
                    <tr>
                        <td>@ledger.ShowID</td>
                        <td>@ledger.LedgerCategoryName</td>
                        <td>@ledger.LedgerDate.ToString("yyyy/MM/dd")</td>
                        <td>@ledger.LedgerAmount.ToString("N0")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>