@{
    ViewData["Title"] = "Home Page";
    var CreateModel = (LedgerCreateViewModel)ViewData["LedgerCreateViewModel"];
}
@model List<LedgerViewModel>

<div class="container mt-4">
    <div class="card bg-light">
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            }
            <form action="/Home/Index" method="post">
                <div class="row mb-3">
                    <label for="LedgerCategory" class="col-sm-2 col-form-label">類別</label>
                    <div class="col-sm-10">
                        <select id="LedgerCategory" name="LedgerCategory" class="form-select">
                            <option value="" selected>請選擇</option>
                            <option value="2">支出</option>
                            <option value="1">收入</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="LedgerAmount" class="col-sm-2 col-form-label">金額</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="LedgerAmount" name="LedgerAmount" placeholder="金額">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="LedgerDate" class="col-sm-2 col-form-label">日期</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="LedgerDate" name="LedgerDate" placeholder="日期">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="LedgerNote" class="col-sm-2 col-form-label">備註</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="LedgerNote" name="LedgerNote" rows="3"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">送出</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @Html.Partial("DataList", Model)
</div>
